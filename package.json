{
  "name": "budget-tool",
  "version": "1.5.12",
  "description": "A local desktop budgeting application with Python backend",
  "main": "electron/main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "budget",
    "finance",
    "electron",
    "python"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.1.7"
  },
  "build": {
    "appId": "com.budgettool.app",
    "productName": "Budget Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "server/**/*",
      "frontend/**/*",
      "python-embed/**/*"
    ],
    "asarUnpack": [
      "server/**/*",
      "frontend/**/*",
      "python-embed/**/*"
    ],
    "extraResources": [
      {
        "from": "python-embed",
        "to": "python",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "Budget.Tool-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": true
    },
    "linux": {
      "target": "AppImage",
      "category": "Finance"
    },
    "mac": {
      "target": "dmg",
      "category": "public.app-category.finance"
    },
    "publish": {
      "provider": "github",
      "owner": "kuntz09matthew",
      "repo": "budget-tool"
    }
  }
}
